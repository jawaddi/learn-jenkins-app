pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage("Test"){
            sh '''
                 echo "check if files exist"
                 cd build
                 test -f index.html && echo "Index exists" || echo "Index missing"
            '''
        }

    }
}
